IsIpAdress
{
	_ip = REPLACE(_argv[0],'.',',');
	_count = 0;
	_outofrange = 0;
	foreach _ip; _i {
		if (TOINT(_i) > 255 || TOINT(_i) < 0) && _i != '*' {
			_outofrange = 1;
			break;
		}
		_count ++;
	}
	if _count == 4 && _outofrange == 0 {
		1
	}
	else {
		0
	}
}

