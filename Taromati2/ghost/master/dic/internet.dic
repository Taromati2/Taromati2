TextBetween
{
	_s = _argv[0];
	_begin = _argv[1];
	_end = _argv[2];
	_idx = 0;
	if _argc > 3 {
		_idx = _argv[3];
	}
	_d = _s[_idx + 1,_begin];
	_d = _d[0,_end];
	_d;
}

TextBetween2
{
	_s = _argv[0];
	_begin = _argv[1];
	_end = _argv[2];
	_idx = 0;
	if _argc > 3 {
		_idx = _argv[3];
	}
	_d = _s[_idx,_end];
	_d = _d[1,_begin];
	_d;
}

TextToEnd         //TextToEnd("a=b=1234",'=',0)=="b=1234"得到字符串"a=b=1234"中从第1个"="到字符串结束的文本"b=1234"
{
_s=_argv[0]
_begin=_argv[1]
	_idx = 0;
	if _argc > 2 {
		_idx = TOINT(_argv[2]);
	}
	_d = _s[_idx,_begin];
        while _s[_idx+1,_begin]!=""
        {
        _d+=_begin+_s[_idx+1,_begin]
         _idx++
        }
  if SUBSTR(_s,STRLEN(_s)-1,1)==_begin
  _d+=_begin
_d
}



BeginToEnd    //BeginToEnd("君不见，黄河之水天上来，奔流到海不复回。",'，',1,2)得到第一个'，'到第二个'，'之间的文本
{
_s=_argv[0]
_txt=_argv[1];
_begin=TOINT(_argv[2]);
_end=0;
	if _argc > 2 {
	_end=TOINT(_argv[3]);
	}

	_d = _s[_begin,_txt];
       _idx=_begin+1;
        while _s[_idx,_txt]!=""&&(_idx<_end&&_end!=0||_end==0)
        {
        _d+=_txt+_s[_idx,_txt]
         _idx++
        }
_d
}



