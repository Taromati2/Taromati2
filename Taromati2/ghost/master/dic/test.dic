OnOrderArr
{
	_buff=_argv[0];
	_n=ARRAYSIZE(_buff)-1;
	for _i=0;_i<_n;_i++
	{
		for _j=_i+1;_j<=_n;_j++
		{    
			if _buff[_i]>_buff[_j]
			{
				_temp=_buff[_j]
				_buff[_j]=_buff[_i]
				_buff[_i]=_temp;
			}
	
		}
	}

	_buff;


}



