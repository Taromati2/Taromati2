	if _argc>0
	{
		_file=_argv[0];
		_str=_argv[1];
		_strend=_argv[2];
	}
	_num=0;
	if FOPEN(_file,"r") 
	{
		_buff="";
		while _buff!=-1
		{
			while _str !_in_ _buff &&_buff!=-1
			{
				_buff=FREAD(_file);
			}
			while _buff != -1 &&_strend !_in_ _buff
			{
				if "题：" _in_ _buff||RE_GREP( _buff,'\d{1,3}、')
				_num++
				_buff=FREAD(_file);
			}
			_buff=FREAD(_file);
