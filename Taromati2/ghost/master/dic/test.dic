LoadExamTestNum
{
	_file = "data\test\会计题库.txt";
	_str="套";
	if _argc>0
		_file=_argv[0];

	_testnum = 0;
        _test=""
	_buff = "";
	FCHARSET(1);
	if FOPEN(_file,"r") 
	{
		_buff = FREAD(_file);
		while _buff != -1  
		{
                		   if  (_str _in_ _buff||RE_GREP(_buff,'[判断选择填空]题'))&&STRLEN(_buff)<=6&&'、'!_in_ _buff||RE_GREP(_buff,'[判断选择填空]题')&&'、'_in_ _buff&&STRLEN(_buff)<=10
	             	   {
	             		      _testnum++
	              		     _test+=_buff+"◆";
	              	   }
			_buff = FREAD(_file);
		}
	}
	_test+="-1◆"
	FCLOSE(_file);
	testnum=_testnum
	FCHARSET(1);
        _test;

}


LoadExamNum
{
	_file = "data\test\会计题库.txt";
